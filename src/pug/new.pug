doctype html
html(lang="ru")
	|{{@FILE assets/templates/projectsoft/html/tpl/head.html}}
	body
		|{{@FILE assets/templates/projectsoft/html/tpl/header.html}}
		main.container-full.article
			.row
				|{{@FILE assets/templates/projectsoft/html/tpl/actions_slider.html}}
				article.container.article--body.hyphenation
					header.article--header
						.article--header--title
							h1
								|[[alterTitle]]
					p.article--body--date
						em
							time.icon-icon18(datetime="[*news_date*]")
								|&nbsp;[[aDate? &date=`[*news_date*]`]] года
					|<@IF:[*content:isNotEmpty*]>
					.article--body--text.hyphenation.text-justify
						|[*content*]
					|<@ENDIF>
					p.content-buttons
						button.callme-btn.btn.btn-default(type="button") Заказать звонок
						button.zamer-btn.btn.btn-default(type="button") Вызвать замерщика
					|[[PageBuilder]]
					p.article--body--person
						strong
							em
								|[*news_person*]
				// КОНТАКТЫ и КАРТА
				|{{@FILE assets/templates/projectsoft/html/tpl/contacts.html}}
		|{{@FILE assets/templates/projectsoft/html/tpl/footer.html}}
		|{{@FILE assets/templates/projectsoft/html/tpl/forms.html}}
		|{{@FILE assets/templates/projectsoft/html/tpl/body_after.html}}
